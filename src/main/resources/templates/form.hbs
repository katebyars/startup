{{#partial "content"}}
    {{#if editEvent}}
            <h1>Edit this Event!</h1>
            <form action="/events/{{editEvent.id}}/update" method="post">
                <label for="name">Change event name</label>
                <input id="name" name="name" type="text" value="{{editEvent.name}}"><br>
                <button type="submit" class="btn btn-default">Go!</button>
            </form>
        {{else if addAttendees}}
            <form action="/events/{{addAttendees.id}}/attendees" method="post">
                <p>You may add attendees to this event, one at a time.</p>
                <label for="attendee">Attendee:</label>
                <input id="attendee" name="attendee" type="text"><br>
                <button type="submit" class="btn btn-default">Go!</button>
            </form>
        {{else}}
        <h1>Add a new Event!</h1>
        <form action="/events/new" method="post">
        <label for="name">Event Name</label>
        <input id="name" name="name" type="text">

        <label for="description">Description</label>
        <input id="description" name="description" type="text"><br>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
        <!--<button type="submit" class="btn btn-default">Go!</button>-->
        <!--</form>-->
{{/partial}}

{{> layout.hbs}}