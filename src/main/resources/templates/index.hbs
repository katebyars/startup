{{#partial "content"}}

    {{#if allEvents }}
        {{#each allEvents }}
            <div class=""well">
            <h1>{{ name }} event</h1>
            <p>Event details: {{ description }}</p>
            <p><a href="/event/{{id}}">see more about this event...</a></p>
            </div>
        {{/each}}
